<% breadcrumb :messages, @messages %>

<%= link_to 'New Message', controller: "messages", action: "new" %>

<h1>Listing messages</h1> 
<table>
  <tr>
    <th>Subject</th>
    <th>Text</th>
  </tr>
 
  <% @messages = @messages.paginate(page: params[:page], per_page: 5) %>
  <% @messages.each do |message| %>
    <tr>
      <td><%= message.subject %></td>
      <td><%= message.text %></td>
      <td><%= link_to 'Show', message_path(message) %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @messages %>