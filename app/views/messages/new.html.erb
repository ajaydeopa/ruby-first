<% breadcrumb :message_new, @nav %>

<h1>New Message</h1>
<%= form_with scope: :message, url: messages_path, local: true do |form| %>
  <p>
    <%= form.label :subject %><br>
    <%= form.text_field :subject %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>